<% if (message) {%>
    <div class="alert success-alert">
        <h3><%=message%></h3>
        <a class="close">&times;</a>
    </div>
<%}%>

<% if (errors) {%>
    <% errors.forEach(function(error) { %>
            <div class="alert danger-alert">
                <h3><%= error.msg %></h3>
                <a class="close">&times;</a>
            </div>
    <% });%>
<% }%>