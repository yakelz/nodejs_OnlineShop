<%- include ("../partials/auth_head.ejs")  %>
<body>
    <div class="wrapper">
        <%- include ("../partials/header.ejs")  %>
        <main class="main">
            <div class="main__wrapper">
                <div class="limiter">
                    <div class="container-login100">
                        <div class="wrap-login100">

                            <form class="login100-form validate-form" action="/user/register" method="post" novalidate>
                                <span class="login100-form-title">
                                    Регистрация
                                </span>

                                <div class="wrap-input100 validate-input">
                                    <input class="input100" type="text" name="name" id="register-username" placeholder="Имя пользователя">
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </span>
                                </div>

                                <div class="wrap-input100 validate-input" data-validate="">
                                    <input class="input100" type="email" name="email" id="register-email" placeholder="Email">
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                    </span>
                                </div>

                                <div class="wrap-input100 validate-input" data-validate="">
                                    <input class="input100" type="password" name="password" id="register-password" placeholder="Пароль">
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </span>
                                </div>

                                <div class="privacy-policy validate-input">
                                    <input id="formAgreement" class="checkbox__input" type="checkbox" name="agree">
                                    <label for="formAgreement" class="checkbox__label"><span>Я согласен <a
                                                href="/about/privacy" target="_blank">с пользовательским
                                                соглашением</a></span></label>
                                </div>

                                <div class="container-login100-form-btn">
                                    <button type="submit" class="login100-form-btn register-button">
                                        Создать аккаунт
                                    </button>
                                </div>

                                <div class="text-center p-t-136">
                                    <span class="txt1">
                                        Уже есть аккаунт?
                                    </span>
                                    <a class="txt2" href="/user/login">
                                        Войдите
                                    </a>
                                </div>
                            </form>

                            <div class="login100-pic js-tilt" data-tilt>
                                <img src="/auth/images/register.png" alt="IMG">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include ("../partials/footer.ejs")  %>
    </div>
    <%- include ("../partials/auth_foot.ejs") %>
    <script src="/auth/js/register.js"></script>
</body>

</html>